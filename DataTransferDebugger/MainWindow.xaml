<Window x:Class="DataTransferDebugger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data Transfer Debugger" Height="700" Width="1000"
        MinHeight="500" MinWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <StackPanel>
                <TextBlock Text="Data Transfer Debugger" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Analyze drag &amp; drop operations and clipboard content" 
                          FontSize="14" 
                          Foreground="#BDC3C7" 
                          HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Control Panel -->
            <Border Grid.Row="0" Background="#ECF0F1" Padding="10" Margin="0,0,0,10" CornerRadius="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="AnalyzeClipboardBtn" Click="AnalyzeClipboard_Click" 
                           Background="#3498DB" Foreground="White" 
                           Padding="15,8" Margin="5" 
                           FontWeight="Bold" BorderThickness="0" 
                           Cursor="Hand">
                        📋 Analyze Clipboard
                    </Button>
                    <Button Name="CopyResultsBtn" Click="CopyResults_Click" 
                           Background="#27AE60" Foreground="White" 
                           Padding="15,8" Margin="5" 
                           FontWeight="Bold" BorderThickness="0" 
                           Cursor="Hand">
                        📄 Copy Results
                    </Button>
                    <Button Name="SaveResultsBtn" Click="SaveResults_Click" 
                           Background="#F39C12" Foreground="White" 
                           Padding="15,8" Margin="5" 
                           FontWeight="Bold" BorderThickness="0" 
                           Cursor="Hand">
                        💾 Save Results
                    </Button>
                    <Button Name="ClearResultsBtn" Click="ClearResults_Click" 
                           Background="#E74C3C" Foreground="White" 
                           Padding="15,8" Margin="5" 
                           FontWeight="Bold" BorderThickness="0" 
                           Cursor="Hand">
                        🗑️ Clear
                    </Button>
                </StackPanel>
            </Border>

            <!-- Drop Zone and Results -->
            <Border Grid.Row="1" BorderBrush="#34495E" BorderThickness="2" 
                   Background="#F8F9FA" CornerRadius="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Drop Zone -->
                    <Border Grid.Column="0" Background="#E8F4FD" 
                           BorderBrush="#3498DB" BorderThickness="2" 
                           CornerRadius="5" Margin="10">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="📦" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="DROP ZONE" FontSize="18" FontWeight="Bold" 
                                     HorizontalAlignment="Center" Foreground="#2C3E50"/>
                            <TextBlock Text="Drag files, text, or any" FontSize="12" 
                                     HorizontalAlignment="Center" Foreground="#7F8C8D" Margin="0,10,0,0"/>
                            <TextBlock Text="data here to analyze" FontSize="12" 
                                     HorizontalAlignment="Center" Foreground="#7F8C8D"/>
                            <Rectangle Height="20"/>
                            <TextBlock Text="Or use the 'Analyze Clipboard'" FontSize="11" 
                                     HorizontalAlignment="Center" Foreground="#95A5A6"/>
                            <TextBlock Text="button above" FontSize="11" 
                                     HorizontalAlignment="Center" Foreground="#95A5A6"/>
                        </StackPanel>
                    </Border>

                    <!-- Splitter -->
                    <GridSplitter Grid.Column="1" Width="5" Background="#BDC3C7" 
                                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                    <!-- Results Area -->
                    <ScrollViewer Grid.Column="2" Margin="10">
                        <TextBox Name="ResultsTextBox" 
                                Background="Transparent" 
                                BorderThickness="0" 
                                IsReadOnly="True" 
                                TextWrapping="Wrap" 
                                VerticalScrollBarVisibility="Auto"
                                FontFamily="Consolas, Courier New, monospace" 
                                FontSize="12"
                                Padding="10"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495E" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Name="StatusLabel" Content="Ready" 
                      Foreground="White" Grid.Column="0"/>

                <TextBlock Grid.Column="1" Foreground="#BDC3C7" 
                          VerticalAlignment="Center" FontSize="11">
                    Tip: Drag files, text, images, or copy data to clipboard then click 'Analyze Clipboard'
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>